# Example Environment Variables Template
# Copy this file to .env and fill in your values
# Location: Underneath/.env.example

# PostgreSQL Database
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=your_database_name
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Complete Database URL for Prisma
DATABASE_URL=postgresql://your_db_user:your_secure_password_here@postgres:5432/your_database_name

# JWT Configuration (GENERATE NEW SECRETS!)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERATE_A_NEW_SECRET_HERE
JWT_REFRESH_SECRET=GENERATE_ANOTHER_SECRET_HERE

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# Application Ports
BACKEND_PORT=3000
FRONTEND_PORT=5173
ADMINER_PORT=8080
PRISMA_STUDIO_PORT=5555

# Application URLs
BACKEND_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Node Environment (development | production | test)
NODE_ENV=development

# Email Service Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=noreply@yourdomain.com

# Session Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=GENERATE_A_SESSION_SECRET_HERE
SESSION_EXPIRY=30d

# CORS Origins (comma separated for multiple)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Security Settings
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Invitation System
INVITATION_EXPIRY_HOURS=24
INVITATION_MAX_USES=1